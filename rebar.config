%% -*- mode: erlang -*-
%% rebar3 configuration for mdns
%% Fork of shortishly/mdns with rebar3 support

{erl_opts, [
    debug_info,
    warnings_as_errors
]}.

{deps, [
    {gproc, "0.9.1"},
    {envy, {git, "https://github.com/macula-io/macula-envy.git", {branch, "main"}}}
]}.

{project_plugins, [
    rebar3_hex,
    rebar3_ex_doc
]}.

%% Hex package configuration
{hex, [
    {doc, #{provider => ex_doc}},
    {licenses, ["Apache-2.0"]},
    {links, #{
        <<"GitHub">> => <<"https://github.com/macula-io/mdns">>,
        <<"Original">> => <<"https://github.com/shortishly/mdns">>
    }},
    {description, "Multicast DNS (mDNS/Zeroconf/Bonjour) for Erlang/OTP (rebar3 fork)"}
]}.

{ex_doc, [
    {source_url, <<"https://github.com/macula-io/mdns">>},
    {main, "README.md"}
]}.
