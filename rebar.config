%% -*- mode: erlang -*-
%% rebar3 configuration for macula_mdns
%% Fork of shortishly/mdns with rebar3 support

{erl_opts, [
    debug_info,
    warnings_as_errors
]}.

{deps, [
    {gproc, "0.9.1"},
    {macula_envy, "0.1.1"}
]}.

{project_plugins, [
    rebar3_hex,
    rebar3_ex_doc
]}.

%% Hex package configuration
{hex, [
    {name, macula_mdns},
    {doc, #{provider => ex_doc}},
    {licenses, ["Apache-2.0"]},
    {links, #{
        <<"GitHub">> => <<"https://github.com/macula-io/macula-mdns">>,
        <<"Original">> => <<"https://github.com/shortishly/mdns">>
    }},
    {description, "Multicast DNS (mDNS/Zeroconf/Bonjour) for Erlang/OTP (rebar3 fork of shortishly/mdns)"}
]}.

{ex_doc, [
    {source_url, <<"https://github.com/macula-io/macula-mdns">>},
    {extras, ["README.md", "CHANGELOG.md", "LICENSE"]},
    {main, "README.md"}
]}.
